{
    "name": "herb/boardbot",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "bin-dir": "bin",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }

    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.86",
        "pestphp/pest": "^4.0",
        "phpstan/phpstan": "^2.1"
    }
}
